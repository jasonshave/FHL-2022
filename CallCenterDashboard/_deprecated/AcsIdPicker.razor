@using CallingDashboard.Models
<MudSelect T="UserTypeEnum" @bind-Value="UserType" Label="Choose type" SelectedValuesChanged="() => ReceiveSelection.InvokeAsync(UserType)">
    <MudSelectItem Value="UserTypeEnum.AcsUser">ACS User</MudSelectItem>
    <MudSelectItem Value="UserTypeEnum.PhoneNumber">Phone Number</MudSelectItem>
    <MudSelectItem Value="UserTypeEnum.TeamsUser">Teams User</MudSelectItem>
</MudSelect>

@code {
    [Parameter] public EventCallback<UserTypeEnum> ReceiveSelection { get; set; } 
    private UserTypeEnum UserType { get; set; }
}

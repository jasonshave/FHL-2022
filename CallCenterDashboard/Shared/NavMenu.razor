<MudDrawer @bind-Open="DrawerOpen" Elevation="2">
    <MudDrawerHeader>
        <MudText Typo="Typo.h5" Class="mt-1">FHL 2022</MudText>
    </MudDrawerHeader>
    <MudPaper Width="240px" Elevation="0" Class="py-1">
        <MudNavMenu Margin="Margin.Dense" Color="Color.Primary">
            <MudNavLink Href="" IconColor="Color.Tertiary" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.House">Home</MudNavLink>
            <MudNavLink Href="eventHistory" IconColor="Color.Info" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Notes">Event History</MudNavLink>
        </MudNavMenu>
    </MudPaper>
</MudDrawer>

@code {
    [Parameter] public bool DrawerOpen { get; set; }

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}

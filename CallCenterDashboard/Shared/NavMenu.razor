@using CallingDashboard.Interfaces
@inject IApplicationSettingsService applicationSettingsService

<MudDrawer @bind-Open="DrawerOpen" Elevation="2">
    <MudDrawerHeader>
        <MudImage Src="/images/acs_logo.jpg" Width="50" Height="50" Class="rounded-lg"/>
        <MudText Typo="Typo.caption" Class="ma-1">Azure Communication Services</MudText>
    </MudDrawerHeader>
    <MudPaper Width="240px" Elevation="0" Class="py-1">
        <MudNavMenu Margin="Margin.Dense" Color="Color.Secondary">
            <MudNavLink Href="#" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Dashboard">Dashboard</MudNavLink>
            <MudNavLink Href="identity" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Computer">Identity</MudNavLink>
            <MudNavLink Href="phoneNumbers" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Numbers">Phone Numbers</MudNavLink>
            <MudNavLink Href="mediaLinks" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.MusicNote">Media</MudNavLink>
            <MudNavGroup Title="Job Router">
                <MudNavLink Href="jobRouter/policies" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Policy">Queues & Policies</MudNavLink>
                <MudNavLink Href="jobRouter/workers" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.SupportAgent">Workers</MudNavLink>
                <MudNavLink Href="jobRouter/jobs" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Work">Jobs</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="eventHistory" IconColor="Color.Default" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Notes">Event History</MudNavLink>
        </MudNavMenu>
    </MudPaper>
</MudDrawer>

@code {
    [Parameter] public bool DrawerOpen { get; set; }

    void DrawerToggle()
    {
        DrawerOpen = !DrawerOpen;
    }
}
@inherits LayoutComponentBase
@inject IDispatcher dispatcher

<MudThemeProvider @bind-IsDarkMode="darkModeEnabled"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<PageTitle>Call Center Dashboard</PageTitle>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())" />
        <MudSpacer />
        @if (darkModeEnabled)
        {
            <MudIconButton Icon="@Icons.Material.Filled.WbSunny" Color="Color.Default" OnClick="SetMode"/>
        }
        else
        {
            <MudIconButton Icon="@Icons.Material.Outlined.DarkMode" Color="Color.Inherit" OnClick="SetMode"/>
        }
    </MudAppBar>
    <NavMenu DrawerOpen="drawerOpen"/>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge">
            @Body
            <EventLogTable/>
        </MudContainer>
        <Notification/>
        <EventLogger/>
    </MudMainContent>
</MudLayout>

@code{
    bool drawerOpen = true;
    bool darkModeEnabled;

    protected override void OnInitialized()
    {
        dispatcher.Dispatch(new CallingServerInitializeAction());
        dispatcher.Dispatch(new ActiveCallsInitializeAction());
        base.OnInitialized();
    }

    void SetMode()
    {
        darkModeEnabled = !darkModeEnabled;
        StateHasChanged();
    }

    void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}